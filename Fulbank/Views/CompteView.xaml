<Window x:Class="Fulbank.Views.CompteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fulbank.Views"
        mc:Ignorable="d"
        Title="CompteView" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Comptes}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="IdCompte" Binding="{Binding IdCompte}" Width="100"/>
                <DataGridTextColumn Header="Solde" Binding="{Binding Solde}" Width="*"/>
                <DataGridTextColumn Header="IdAbonnement" Binding="{Binding IdAbonnement}" Width="100"/>
                <DataGridTextColumn Header="IdMonnaie" Binding="{Binding IdMonnaie}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
