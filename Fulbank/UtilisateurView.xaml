<Window x:Class="Fulbank.Views.UtilisateurView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liste des utilisateurs" Height="300" Width="500">

    <Grid Margin="10">
        <DataGrid ItemsSource="{Binding Utilisateurs}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdUtilisateur}" Width="50"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="*"/>
                <DataGridTextColumn Header="Wallet" Binding="{Binding IdWallet}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
